<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ListMechanicController"
            stylesheets="@styles.css" styleClass="gradient-pane">

   <!-- Sidebar -->
   <VBox fx:id="sidebar" prefWidth="200.0" styleClass="sidebar" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0">
      <Label text="Menu" styleClass="menu-label"/>
      <Button text="Dashboard" styleClass="menu-button"/>
      <Button text="Mechanics" fx:id="btnMechanics" styleClass="menu-button"/>
      <Button text="Assignments" fx:id="btnAssignments" styleClass="menu-button" onAction="#switchToAssignments"/>
      <Button text="Billing" styleClass="menu-button"/>
      <Button text="Warehouse" styleClass="menu-button"/>
      <Button text="Users" styleClass="menu-button"/>
      <Button text="Orders" styleClass="menu-button"/>
   </VBox>

   <!-- Main Content -->
   <HBox spacing="20" alignment="TOP_LEFT" AnchorPane.leftAnchor="220.0" AnchorPane.topAnchor="80.0">
      <VBox spacing="10">
         <Label text="List of Mechanics" styleClass="table-header"/>
         <TableView fx:id="mechanicsTableView" AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0"
                    AnchorPane.topAnchor="20.0"
                    AnchorPane.bottomAnchor="20.0"  styleClass="admin-table">
            <!-- Ensures no extra empty column -->
            <columnResizePolicy>
               <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
               <TableColumn fx:id="idMechanicColumn" text="Mechanic ID" prefWidth="130"/>
               <TableColumn fx:id="nameMechanicColumn" text="Name" prefWidth="200"/>
               <TableColumn fx:id="specialityMechanicColumn" text="Speciality" prefWidth="420"/>
               <TableColumn fx:id="actionColumn" text="Actions" prefWidth="160"/>
            </columns>
         </TableView>
         <Button text="Add Mechanic" onAction="#addMechanic" prefWidth="930" styleClass="menu-button-active"/>
      </VBox>
   </HBox>

</AnchorPane>
