<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.UpdateAssignmentController" spacing="15" alignment="CENTER">

    <Label text="Update Assignment" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Label text="Description:" />
    <TextField fx:id="descriptionAssignmentField" promptText="Enter assignment description" />

    <Label text="Status:" />
    <TextField fx:id="statusAssignmentField" promptText="Enter assignment status" />

    <Label text="User ID:" />
    <TextField fx:id="idUserField" promptText="Enter user ID" />

    <Label text="Assign Mechanics:" />
    <ListView fx:id="mechanicListView" prefHeight="120" />

    <Button fx:id="saveButton" text="Save" onAction="#saveAssignment" />
    <Button fx:id="cancelButton" text="Cancel" onAction="#cancel" />

</VBox>
